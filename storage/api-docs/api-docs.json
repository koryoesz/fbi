{
    "openapi": "3.0.0",
    "info": {
        "title": "Airtime Vending API",
        "description": "API for vending airtime using MTN and GLO through BAP or Shaggo partners",
        "version": "1.0.0"
    },
    "paths": {
        "/vend/recharge/{type}": {
            "get": {
                "tags": [
                    "Airtime"
                ],
                "summary": "buy airtime",
                "description": "Endpoint for purchasing airtime, either from Bap or Shago Services",
                "operationId": "3ad6c37440e2d9f2130228006d7112cd",
                "parameters": [
                    {
                        "name": "phone_number",
                        "in": "query",
                        "description": "The phone number to recharge (format: 07012345678)",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "example": "07065788819"
                        }
                    },
                    {
                        "name": "amount",
                        "in": "query",
                        "description": "The amount of airtime to purchase (in NGN)",
                        "required": true,
                        "schema": {
                            "type": "number",
                            "format": "float",
                            "example": 100
                        }
                    },
                    {
                        "name": "service_type",
                        "in": "query",
                        "description": "The network provider for the airtime (e.g., MTN, AIRTEL, GLO, 9MOBILE)",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "enum": [
                                "MTN",
                                "GLO"
                            ],
                            "example": "MTN"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation"
                    },
                    "400": {
                        "description": "Invalid request"
                    }
                }
            }
        }
    },
    "tags": [
        {
            "name": "Airtime",
            "description": "Airtime"
        }
    ]
}